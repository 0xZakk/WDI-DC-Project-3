<div class="row">
  <div class="col-md-8">
    <h2>New Playlist</h2>
  </div>
  <div class="col-md-4">
  </div>
</div>

<div class="row">
  <div class="col-md-8">

    <%= form_for @playlist do |f| %>
      <%= f.label :name, "Playlist Name" %><br>
      <%= f.text_field :name, :class => "form-control", :placeholder => "Enter playlist name" %><br>

      <%= f.label :genre %><br>
      <%= f.text_field :genre, :class => "form-control", :placeholder => "Genre" %><br>

      <%= f.submit :class => "btn btn-default" %>
    <% end %>

  </div>
</div>


